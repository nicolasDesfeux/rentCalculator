<?xml version="1.0"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="mongoDbConnexion">
        <!-- Use the Hibernate OGM provider: configuration will be transparent -->
        <provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>
        <properties>
            <property name="hibernate.ogm.datastore.provider" value="mongodb"/>
            <property name="hibernate.ogm.mongodb.host" value="localhost"/>
            <property name="hibernate.ogm.mongodb.port" value="27017"/>
            <property name="hibernate.ogm.mongodb.database" value="testNico"/>
            <property name="hibernate.ogm.datastore.database" value="testNico"/>
            <property name="hibernate.ogm.mongodb.write_concern" value="ACKNOWLEDGED"/>
        </properties>
    </persistence-unit>
</persistence>